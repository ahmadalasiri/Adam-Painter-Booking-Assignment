# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose Vite port
EXPOSE 5173

# Start in development mode with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

